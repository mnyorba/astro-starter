---
import Head from "../components/Head.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const { ...props } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <Head {...props} />
  </head>
  <body class="text-base-content mx-auto grid h-dvh grid-rows-[auto_1fr_auto]">
    <header>
      <Header />
    </header>
    <main class="prose max-w-full">
      <div class="mx-auto max-w-[140rem] px-2 py-6">
        <slot />
      </div>
    </main>
    <footer class="footer bg-base-200">
      <div class="mx-auto w-full max-w-[140rem] px-2 py-6">
        <Footer />
      </div>
    </footer>
  </body>
</html>
