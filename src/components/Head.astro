---
import "../styles/global.css";

import { metadata, social } from "../consts";

// This component can be used on any page
const { title, description, image, type, publishDate, updateDate, author } =
  Astro.props;

const pageUrl = new URL(Astro.url.pathname, Astro.site).toString();
const siteImage = new URL(image || metadata.image, Astro.site).toString();

const twitterHandle = social.twitter
  ? `@${social.twitter.split("/").pop()}`
  : "";

const schema = {
  "@context": "https://schema.org",
  "@type": type === "article" ? "Article" : "WebPage",
  name: title || metadata.title,
  description: description || metadata.description,
  url: pageUrl,
  image: siteImage,
  ...(type === "article" && {
    headline: title,
    datePublished: publishDate,
    ...(updateDate && { dateModified: updateDate }),
    ...(author && {
      author: {
        "@type": "Person",
        name: author.name,
        ...(author.site && { url: author.site }),
      },
    }),
  }),
};
---

<!-- Common meta tags -->
<title>{title || metadata.title}</title>
<meta charset="utf-8" />
<meta http-equiv="X-UA-Compatible" content="IE=edge" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<meta name="description" content={description || metadata.description} />
<meta name="keywords" content={metadata.keywords} />
<meta name="author" content={metadata.author} />
<meta name="robots" content={metadata.robots} />
<link rel="canonical" href={pageUrl} />

<!-- Favicon -->
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="icon" type="image/png" href="/favicon.png" />
<link rel="apple-touch-icon" href="/apple-touch-icon.png" />
<meta name="theme-color" content="#ffffff" />

<!-- Open Graph (Facebook, LinkedIn) -->
<meta property="og:type" content={type || metadata.type} />
<meta property="og:title" content={title || metadata.title} />
<meta property="og:description" content={description || metadata.description} />
<meta property="og:image" content={siteImage} />
<meta property="og:url" content={pageUrl} />
<meta property="og:site_name" content={metadata.title} />

<!-- Twitter Card -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={title || metadata.title} />
<meta
  name="twitter:description"
  content={description || metadata.description}
/>
<meta name="twitter:image" content={siteImage} />
<meta name="twitter:url" content={pageUrl} />
<meta name="twitter:site" content={twitterHandle} />
<meta name="twitter:creator" content={twitterHandle} />

<!-- Apple -->
<meta name="apple-mobile-web-app-title" content={title || metadata.title} />
<meta name="apple-mobile-web-app-capable" content="yes" />
<meta name="apple-mobile-web-app-status-bar-style" content="default" />

<!-- Microsoft -->
<meta name="msapplication-TileColor" content="#ffffff" />
<meta name="msapplication-TileImage" content="/mstile-144x144.png" />

<!-- Structured data (Schema.org) -->
<script is:inline set:html type="application/ld+json" set:html={JSON.stringify(schema)} />
