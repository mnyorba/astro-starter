---
import Logo from "../assets/astro.svg";
import ThemeToggle from "../components/ThemeToggle.astro";
import NavbarMenuItems from "./navigation/NavbarMenuItems.astro";

import { config } from "../consts";
const isHome =
  Astro.url.pathname === config.base ||
  Astro.url.pathname === `${config.base}/`;
---

<div class="bg-base-100 shadow-sm">
  <div class="navbar mx-auto max-w-[140rem]">
    <div class="navbar-start">
      <div class="dropdown">
        <div tabindex="0" role="button" class="btn btn-ghost lg:hidden">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h8m-8 6h16"></path>
          </svg>
        </div>
        <ul
          tabindex="0"
          class="menu menu-sm dropdown-content bg-base-100 rounded-box z-[1] mt-3 w-52 p-2 shadow"
        >
          <NavbarMenuItems />
        </ul>
      </div>
      {
        !isHome && (
          <a
            href={`${config.base}/`}
            class="btn btn-ghost hidden text-xl lg:flex"
          >
            <img src={Logo.src} alt="Homepage" class="h6 w-6" />
            Astro
          </a>
        )
      }
      {
        isHome && (
          <span class="btn btn-ghost hidden text-xl lg:flex">
            <img src={Logo.src} alt="Homepage" class="h6 w-6" />
            Astro
          </span>
        )
      }
    </div>
    <div class="navbar-center">
      {
        !isHome && (
          <a href={`${config.base}/`} class="btn btn-ghost text-xl lg:hidden">
            <img src={Logo.src} alt="Homepage" class="h6 w-6" />
            Astro
          </a>
        )
      }
      {
        isHome && (
          <span class="btn btn-ghost text-xl lg:hidden">
            <img src={Logo.src} alt="Homepage" class="h6 w-6" />
            Astro
          </span>
        )
      }
      <ul class="menu menu-horizontal hidden px-1 lg:flex">
        <NavbarMenuItems />
      </ul>
    </div>
    <div class="navbar-end">
      <ThemeToggle class="btn bth-ghost" />
    </div>
  </div>
</div>
