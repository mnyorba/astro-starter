---
import astroLogo from "../assets/astro.svg";
import background from "../assets/background.svg";

interface Props {
  title: string;
}
const title = Astro.props.title || "Welcome to Astro!";
---

<div
  id="container"
  class="flex h-[50rem] flex-col items-center justify-center pb-20"
>
  <img id="background" src={background.src} alt="" fetchpriority="high" />
  <div>
    <section id="hero">
      <a href="https://astro.build" class="animate-fade-up flex items-center"
        ><img
          src={astroLogo.src}
          class="!my-0"
          width="115"
          height="48"
          alt="Astro Homepage"
        />
        <h1 class="text-2xl md:text-4xl">{title}</h1>
      </a>
      <h2 class="animate-fade-up text-base/8 md:text-lg/10">
        To get started, open the
        <pre class="inline w-fit">src/pages</pre>
        directory in your project.
      </h2>
      <section id="links" class="animate-fade-up mt-4">
        <a class="btn btn-outline btn-secondary" href="https://docs.astro.build"
          >Read Astro docs</a
        >
        <a class="btn btn-ghost" href="https://astro.build/chat"
          >Join Astro Discord <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-6 w-6"
            viewBox="0 0 127.14 96.36"
            ><path
              fill="currentColor"
              d="M107.7 8.07A105.15 105.15 0 0 0 81.47 0a72.06 72.06 0 0 0-3.36 6.83 97.68 97.68 0 0 0-29.11 0A72.37 72.37 0 0 0 45.64 0a105.89 105.89 0 0 0-26.25 8.09C2.79 32.65-1.71 56.6.54 80.21a105.73 105.73 0 0 0 32.17 16.15 77.7 77.7 0 0 0 6.89-11.11 68.42 68.42 0 0 1-10.85-5.18c.91-.66 1.8-1.34 2.66-2a75.57 75.57 0 0 0 64.32 0c.87.71 1.76 1.39 2.66 2a68.68 68.68 0 0 1-10.87 5.19 77 77 0 0 0 6.89 11.1 105.25 105.25 0 0 0 32.19-16.14c2.64-27.38-4.51-51.11-18.9-72.15ZM42.45 65.69C36.18 65.69 31 60 31 53s5-12.74 11.43-12.74S54 46 53.89 53s-5.05 12.69-11.44 12.69Zm42.24 0C78.41 65.69 73.25 60 73.25 53s5-12.74 11.44-12.74S96.23 46 96.12 53s-5.04 12.69-11.43 12.69Z"
            ></path></svg
          >
        </a>
      </section>
    </section>
  </div>
</div>

<style>
  #background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 50rem;
    z-index: -1;
    filter: blur(100px);
  }
</style>
