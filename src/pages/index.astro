---
import Layout from "../layouts/Layout.astro";
import Welcome from "../components/Welcome.astro";
import LastPosts from "../components/common/LastPosts.astro";

const title = "Welcome to Astro Theme!";
const description =
  "Starter template for Astro with Tailwind CSS, prebuilt components and sensible defaults to jumpstart your project.";
---

<Layout title={title} description={description} pagefind={false}>
  <Welcome title={title} />
  <LastPosts count={3} />
</Layout>
